<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ProblemDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp">

            <View
                android:id="@+id/title_indicator"
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:background="@color/state_false" />

            <EditText
                android:id="@+id/title_editText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#ffffffff"
                android:paddingBottom="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="8dp"
                android:text="标题"
                android:textColor="#ff000000"
                android:textSize="26sp"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginTop="15dp">

            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="5dp"
                android:background="@color/state_achieved" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hexagon"
                        android:gravity="center"
                        android:text="1/3"
                        android:textColor="#ffffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/description_"
                        android:textColor="@color/state_achieved"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.onecivilization.MyOptimize.CustomView.MyEditText
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="#00000000"
                    android:gravity="top"
                    android:hint="@string/description"
                    android:minHeight="70dp"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hexagon"
                        android:gravity="center"
                        android:text="2/3"
                        android:textColor="#ffffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/analysis_"
                        android:textColor="@color/state_achieved"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.onecivilization.MyOptimize.CustomView.MyEditText
                    android:id="@+id/analysis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="#00000000"
                    android:gravity="top"
                    android:hint="@string/analysis"
                    android:minHeight="70dp"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hexagon"
                        android:gravity="center"
                        android:text="3/3"

                        android:textColor="#ffffffff"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="@string/solution_"
                        android:textColor="@color/state_achieved"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.onecivilization.MyOptimize.CustomView.MyEditText
                    android:id="@+id/solution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:background="#00000000"
                    android:gravity="top"
                    android:hint="@string/solution"
                    android:minHeight="70dp"
                    android:textColor="#ff000000"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hexagon"
                        android:gravity="center"
                        android:text="END"
                        android:textColor="#ffffffff"
                        android:textSize="13sp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="none"
                        android:paddingLeft="15dp"
                        android:singleLine="true"
                        android:text="-------------------------------------------------------"
                        android:textColor="@color/state_achieved"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</ScrollView>